extends layout

block content
    form(id='loginForm', method='post', action='/login').block-panel
        h2.block-panel-heading Sign in
            input.form-control.credentials(type='email', name='email', placeholder='Email address', required, autofocus='')
            input.form-control.credentials(type='password', name='password' placeholder='Password', required)
            label.checkbox
                input(type='checkbox', name ='remember', value='remember-me')
                |  Remember me
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Login
            a.btn.btn-lg.btn-primary.btn-block(href='/register') Register

block scripts
    script(src='/javascripts/jquery.validate.min.js')
    script.
        $("#loginForm").validate();